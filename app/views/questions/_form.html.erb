<% form_for(@question) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 40, :rows => 5 %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_area :answer, :cols => 40, :rows => 5 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
